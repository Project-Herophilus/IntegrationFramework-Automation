---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: maven-pvc
  namespace: '{{ cicd_project }}'
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: '{{ tekton_maven_storage_size }}'
  storageClassName: '{{ tekton_storage_class }}'
  volumeMode: Filesystem
---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: shared-workspace-pvc
  namespace: '{{ cicd_project }}'
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: '{{ tekton_shared_workspace_storage_size }}'
  storageClassName: '{{ tekton_storage_class }}'
  volumeMode: Filesystem
