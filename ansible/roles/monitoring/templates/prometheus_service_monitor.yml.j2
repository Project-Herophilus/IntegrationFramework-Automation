apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  labels:
    k8s-app: prometheus-app-monitor
  name: third-party
  namespace: '{{ demo_project }}'
spec:
  endpoints:
  - interval: 30s
    targetPort: 8080
    path: /actuator/prometheus
    scheme: http
  selector:
    matchLabels:
      app: third-party
